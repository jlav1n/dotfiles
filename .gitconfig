[user]
    name = Josh Lavin

[alias]
    br = branch
    ci = commit
    co = checkout
    di = diff
    grep-all = !"f() { git rev-list --all | xargs git grep \"$@\"; }; f"  # Find text in any commit ever
    logr = "!f() { \
        branch=$(git rev-parse --abbrev-ref HEAD); \
        upstream=$(git rev-parse --abbrev-ref --symbolic-full-name @{upstream} 2>/dev/null || echo origin/main); \
        if [ \"$upstream\" = \"origin/$branch\" ]; then \
            base=origin/main; \
        else \
            base=$upstream; \
        fi; \
        echo \"Commits in $branch not yet merged into $base\"; \
        git log --reverse --no-merges $base..$branch \"$@\"; \
    }; f"
    lp = log --graph --decorate
    st = status
    sbranch = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
    tree=log --graph --pretty='format:%C(yellow) %h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'

[core]
    pager = less -R -X -x4
	excludesfile = ~/.gitignore_global

[rerere]
	enabled = true

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    shobranch = auto
    status = auto
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[github]
    user = jlav1n

[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
	verbose = true
[rebase]
	autosquash = true
[push]
	default = current
[advice]
	skippedCherryPicks = false
